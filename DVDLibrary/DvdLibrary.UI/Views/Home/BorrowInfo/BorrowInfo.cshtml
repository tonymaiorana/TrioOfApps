@model DvdLibrary.UI.Models.BorrowInfoVM
@{
    ViewBag.Title = "BorrowInfo";
}

<h2>BorrowInfo</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>DVD Title</th>
            <th>Borrower Name</th>
            <th>Checkout Date</th>
            <th>Return Date</th>
            <th>User Rating</th>
            <th>User Comments</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var borrow in Model.BorrowInfos)
        {
            <tr>
                <td>@borrow.</td>
                <td>@borrow.LastName, @borrow.FirstName</td>
                <td>@borrow.BorrowStartDate</td>
                <td>@borrow.BorrowEndDate</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table> 