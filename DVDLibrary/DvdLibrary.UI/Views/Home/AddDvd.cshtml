@model DvdLibrary.Models.Dvd

@{
    ViewBag.Title = "AddDvd";
}

<h2>Add A Dvd</h2>
@using (Html.BeginForm("AddDvd", "Home", FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new {@class = "control-label"})
            @Html.EditorFor(m => m.Title, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Director.DirectorFirstName, new {@class = "control-label"})
            @Html.EditorFor(m => m.Director.DirectorFirstName, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Director.DirectLastName, new {@class = "control-label"})
            @Html.EditorFor(m => m.Director.DirectLastName, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MPAARating, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.MPAARating, Model.MPAARating, new { HtmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
}
