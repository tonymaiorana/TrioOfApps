@using System.Web.Mvc.Html
@model DvdLibrary.Models.Dvd

@{
    ViewBag.Title = "AddDvd";
}

<h2>Add A Dvd</h2>
@using (Html.BeginForm("AddDvd", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "control-label" })
            @Html.EditorFor(m => m.Title, new { HtmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Director.DirectorFirstName, new { @class = "control-label" })
            @Html.(m => m.Director.DirectorFirstName, new { HtmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Director.DirectorLastName, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Director.DirectorLastName, Model.Director.DirectorLastName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ReleaseDate, new {@class = "control-label"})
            @Html.EditorFor(m => m.ReleaseDate, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MPAARating, new {@class = "control-label"})
            @*use ENUMDropDownListFor to show enum*@
            @Html.EnumDropDownListFor(m => m.MPAARating, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.UserComments, new {@class = "control-label"})
            @Html.TextAreaFor(m => m.UserComments, new {HtmlAttributes = new {@class = "form-control"}})
        </div>

        <button id="Add" class="btn-default">Add Dvd</button>
    </div>
}