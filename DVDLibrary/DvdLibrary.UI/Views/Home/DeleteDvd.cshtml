@model DvdLibrary.Models.Dvd

@{
    ViewBag.Title = "Delete Dvd";
}

<h2>Delete Dvd</h2>

<h3>Are you sure you want to delete this DVD?</h3>
<div>
    <h4>Dvd Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.AverageRating)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AverageRating)
                </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate.ToString("MM-dd-yyyy"))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>