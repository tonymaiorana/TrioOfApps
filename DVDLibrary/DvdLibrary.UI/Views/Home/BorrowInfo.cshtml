@model List<DvdLibrary.Models.BorrowInfo>
@{
    ViewBag.Title = "BorrowInfo";
}

<h2>BorrowInfo</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>DVD ID</th>
            <th>Borrower Name</th>
            <th>Checkout Date</th>
            <th>Return Date</th>
            <th>Borrower Rating</th>
            <th>Borrower Comment</th>
        </tr>
    </thead>
    <tbody>
        @*Need to be able to associate dvd id -> dvd, get dvd title, same with borrower id->get borrower name*@
        @foreach (var borrow in Model)
            {
            <tr>
                <td>@borrow.DvdTitle</td>
                <td>@borrow.FirstName @borrow.LastName</td>
                <td>@borrow.DateBorrowed.ToShortDateString()</td>
                <td>@(borrow.DateReturned == null ? "-" : borrow.DateReturned.ToString())</td>
                <td>@(borrow.BorrowerRating == null ? "-" : borrow.BorrowerRating.ToString())</td>
                <td>@(borrow.BorrowerComment == null ? "-" : borrow.BorrowerComment)</td>
            </tr>
        }
    </tbody>
</table> 