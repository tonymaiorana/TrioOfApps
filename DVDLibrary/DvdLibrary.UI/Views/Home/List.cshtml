@model DvdLibrary.UI.Models.ListDvdVM
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>DVD Title</th>
            <th>Studio</th>
            <th>Release Date</th>
            <th>MPAA Rating</th>
            <th>Director</th>
            <th>Borrow</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var dvd in Model.Dvds)
        {
            <tr>
                <td>@dvd.Title</td>
                <td>@dvd.Studio</td>
                <td>@dvd.ReleaseDate</td>
                <td>@dvd.MPAARating</td>
                <td>@dvd.Director.DirectorLastName, @dvd.Director.DirectorFirstName</td>
                <td>
                    @if (dvd.IsAvailable)
                    {
                        @Html.ActionLink("Borrow", "BorrowDvd", "Home", new { @class = "btn btn-success" })
                    }
                    else
                    {
                        @Html.ActionLink("Borrow", "BorrowDvd", "Home", new { @class = "btn btn-success", @disabled = "disabled" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>