@model DvdLibrary.UI.Models.ListDvdVM
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>DVD Title</th>
            <th>Release Date</th>
            <th>MPAA Rating</th>
            <th>Availability</th>
            <th>Delete DVD</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var dvd in Model.Dvds)
        {
            <tr>
                <td>@dvd.Title</td>
                @*<td>@dvd.Studio</td>*@
                <td>@dvd.ReleaseDate.ToString("MM-dd-yyyy")</td>
                <td>@dvd.MPAARating</td>
                @*<td>@dvd.Director.DirectorLastName, @dvd.Director.DirectorFirstName</td>*@
                <td>
                    @if (dvd.BorrowInfo == null)
                    {
                        using (Html.BeginForm("BorrowDvd", "Home", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.currentBorrower.BorrowerId)
                            @Html.Hidden("DvdId", dvd.DvdId)
                            <button class="btn btn-success">Borrow</button>
                        }
                        @*@Html.ActionLink("Borrow", "BorrowDvd", "Home", new {id = dvd.DvdId}, new {@class = "btn btn-success"})*@
                    }
                    else if (!dvd.BorrowInfo.IsActive)
                    {
                        using (Html.BeginForm("BorrowDvd", "Home", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.currentBorrower.BorrowerId)
                            @Html.Hidden("DvdId", dvd.DvdId)
                            <button class="btn btn-success">Borrow</button>
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Borrow", "BorrowDvd", "Home", new { @class = "btn btn-success", @disabled = "disabled" })
                    }
                </td>
                <td>@Html.ActionLink("Delete", "DeleteDvd", new { dvdId = dvd.DvdId }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </tbody>
</table>