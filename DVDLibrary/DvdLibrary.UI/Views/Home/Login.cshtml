@model DvdLibrary.Models.Borrower
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Login failed. Check your login details.");
    <div>
        <fieldset>

            <div class="editor-label">
                @Html.LabelFor(b => b.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(b => b.LastName, new
           {
               @class = "form-control",
               @onkeyup = "InputToUpper(this);"
           })
                @Html.ValidationMessageFor(b => b.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(b => b.PhoneNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(b => b.PhoneNumber)
                @Html.ValidationMessageFor(b => b.PhoneNumber)
            </div>
            <input type="submit" value="LogIn" />
        </fieldset>
    </div>
}